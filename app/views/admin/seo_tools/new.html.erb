<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <div class="col-lg-3"><h2>Seo Tools</h2></div>
    <div class="col-lg-9">
      <!-- <a href="<%#=admin_cities_new_item_path(params[:id])%>" class="btn btn-danger btn-lg pull-right" style="margin-top: 2%;"><i class="fa fa-plus"></i> Add Menu Item </a> -->
    </div>  
  </div> 
</div>
<div class="row"> 
  <div class="col-lg-10"style="padding-left:200px;">
    <div class="ibox">
      <div class="col-lg-12">
        <br>
        <%=form_for :user,url: admin_seo_tools_create_path,:html=>{:id=>"new_form",:class=>"form",:multipart =>true} do |b|%>
          <div class="panel panel-info">
            <div class="panel-heading">User Details</div>
            <div class="panel-body">
              <input type="hidden" name="builders_id" value="<%#=@city.id%>">
                                    
             
             <div class="form-group row">
                <label class="col-sm-3 col-form-label">Seo Title</label>
                <div class="col-sm-7">
                   <input id="t1" type="text" name = "title" placeholder="Seo Title" class="form-control" autocomplete = "off">
 <div id=d1>0</div>
                </div>
              
 
             </div>
             <div class="form-group row">
                <label class="col-sm-3 col-form-label">Seo Description</label>
                <div class="col-sm-7">
                   <input id="t2" type="text" name = "description" placeholder="Seo Description" class="form-control" autocomplete = "off">
                </div>
             <div id=d2>0</div>
             </div>

            
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Seo Keywords</label>
                <div class="col-sm-7">
                   <input type="text" data-role="taginput" name = "keyword" placeholder="Seo Keywords" class="form-control" autocomplete = "off">
                </div>
             </div>
        
            <div class="form-group">
                <button class="btn btn-md btn-primary pull-right" type="submit"style="margin-top: -29px;" id="submit"><strong>Submit</strong></button>     
              </div>           
            </div>
          </div>
        <%end%> 
      </div>
    </div>
  </div>
</div>    

