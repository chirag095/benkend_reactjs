
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Flats Price List</h5>
                
                  <!-- <div class="col-lg-9"> -->
                      <a href="<%=admin_projects_flatsnew_path(project_id:@project.id)%>" class="btn btn-danger pull-right" style="margin-top: -7px; margin-right: 73px;"><i class="fa fa-plus"></i> Add Flats Price List </a>
                    <!-- </div>  -->
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li><a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
          <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >

                    <thead>
                    <tr>
                       <th>Id</th>
                        <th>Flats Type</th>
                        <th>Carpet Area</th>
                        <th>Price</th>

                        <th>Action</th>
                      
                      
                    </tr>
                    </thead>
                    <% @flats.each do |f|%>
                    <tbody>
                    <tr>
                        <td><%=f.id%></td>
                        <td><%=f.title%></td>
                        <td><%=f.carpet_area%></td>
                        <td><%=f.price%></td>

                        

                        <td>
                            <a href="<%=admin_project_flatsedit_path(project_id:@project.id,flat_id:f.id)%>"class="btn btn-success btn-md"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                         
                            <a class="btn btn-danger btn-md remove" note="<%=@project.id%>" rel="<%=f.id%>"><i class="fa fa-trash"></i></a>  
                        </td>
                    </tr>
                  
                    </tbody>
                    <%end%>
                </table>
                 </div>
            </div>
        </div>
    </div>
</div>
</div>    

<script type="text/javascript">
  $(".remove").on("click",function(){
    id = $(this).attr("rel")
    project = $(this).attr("note")
    console.log(id)
    swal({
        title: "Are you sure?",
        text: "You will not be able to recover this Amenity",
        type: "warning",
        showCancelButton: true,
        confirmButtonClass: "btn-danger",
        confirmButtonText: "Yes, delete it!",
        cancelButtonText: "No, cancel plz!",
        closeOnConfirm: false,
        closeOnCancel: false
    },
    function(remove) {
        if (remove) {
          window.location = "/admin/projects/flatsdelete?id="+id+"&project_id="+project;
          swal("Deleted!", "Your Category has been deleted.", "success");
        } else {
          swal("Cancelled", "Your Category is safe", "error");
        }
    });
  })
</script>