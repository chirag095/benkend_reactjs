<style type="text/css">
          <link rel="stylesheet" type="text/css" href="./style.css" />
</style>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <div class="col-lg-3"><h2>Edit Flats price</h2></div>
    <div class="col-lg-9">
      <!-- <a href="<%#=admin_new_item_path(params[:id])%>" class="btn btn-danger btn-lg pull-right" style="margin-top: 2%;"><i class="fa fa-plus"></i> Add Menu Item </a> -->
    </div>  
  </div> 
</div>
<div class="row"> 
  <div class="col-lg-10"style="padding-left:200px;">
    <div class="ibox">
      <div class="col-lg-12">
        <br>
        <%=form_for :user,url: admin_project_flatsupdate_path(project_id:@project_id),:html=>{:project_id=>"new_form",:class=>"form",:multipart =>true} do |f|%>
          <div class="panel panel-info">
            <div class="panel-heading">User Details</div>
            <div class="panel-body">
              <input type="hidden" name="project_id" value="<%=@project.id%>">
              <input type="hidden" name="flat_id" value="<%=@flat.id%>">
                                    
             
             <div class="form-group row">
                <label class="col-sm-3 col-form-label">Flats Type</label>
                <div class="col-sm-7">
                   <input type="text" name = "title" placeholder="Flats Type" class="form-control" value = "<%=@flat.title%>"autocomplete = "off">
                </div>
             </div>
          
          <div class="form-group row">
                <label class="col-sm-3 col-form-label">Carpet Area</label>
                <div class="col-sm-7">
                   <input type="text" name = "carpet_area" placeholder="Carpet Area" class="form-control" value = "<%=@flat.carpet_area%>"autocomplete = "off">
                </div>
             </div>
             <div class="form-group row">
                <label class="col-sm-3 col-form-label">Flats Price</label>
                <div class="col-sm-7">
                   <input type="text" name = "price" placeholder="Flats Price" class="form-control" value = "<%=@flat.price%>"autocomplete = "off">
                </div>
             </div>
        
          
          
            
              <div class="form-group">
                <button class="btn btn-md btn-primary float-right m-t-n-xs pull-right" type="submit" style= "margin-top: -23px;"id="submit"><strong>Submit</strong></button>     
              </div>           
            </div>
          </div>
        <%end%> 
      </div>
    </div>
  </div>
</div>    





