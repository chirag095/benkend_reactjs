<div class="wrapper wrapper-content animated fadeInRight">
   <div class="row">
      <div class="col-lg-12">
         <div class="ibox ">
            <div class="ibox-title">
               <h5>Project Add</h5>
               <!-- <div class="col-lg-9"> -->
               <a href="<%=admin_projects_new_path%>" class="btn btn-danger pull-right" style="margin-top: -7px; margin-right: 73px;"><i class="fa fa-plus"></i> Create Project </a>
               <!-- </div>  -->
               <div class="ibox-tools">
                  <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
                  </a>
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <i class="fa fa-wrench"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-user">
                     <li><a href="#" class="dropdown-item">Config option 1</a>
                     </li>
                     <li><a href="#" class="dropdown-item">Config option 2</a>
                     </li>
                  </ul>
                  <a class="close-link">
                  <i class="fa fa-times"></i>
                  </a>
               </div>
            </div>
            <div class="ibox-content">
               <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover dataTables-example" >
                     <thead>
                        <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        
                        <th>Project Type</th>
                         <th>Project New Title</th>
                         <th>Project Features</th>
                         <th>Project Start Price</th>
                         <th>Project Status</th>
                        <th>Select Builders</th>
                        <th>Select Amenity</th>
                        <th>Select States</th>
                        <th>Select City</th>
                        <th> Select Locality</th>
                        <th>Assets Type</th>
                        <th> Location Map</th>
                        <th>Site Plan</th>
                        <th>Project OverView</th>
                        <th>Seo Project</th>
                        <th>Seo Descreption</th>
                       <th>Keyword</th>
                       <th>Highlights</th>
                        
                        <th>Launch Date</th>

                        <th>Status</th>
                        <th>Action</th>

                         </tr>
                     </thead>
                   
                     <% @projects.each do |pro|%>
                     <tbody>
                        <tr>
                           <td><%=pro.id%></td>
                            <td><img src="<%=pro.image.present? ? pro.image : '/assets/download.jpeg'%>"style="width: 100px;height: 100px;"></td>
                           <td><%=pro.title%></td>
                     
                            <td><%=pro.project_type %></td>
                            <td><%=pro.new_title%></td>
                            <td><%=pro.project_features%></td>
                            <td><%=pro.start_price%></td>
                            <td><%=pro.project_status%></td>
                           <td><%=pro&.builder&.title%></td>
                           <td><%=pro&.amenity&.title%></td>
                           <td><%=pro&.state&.title%></td>
                           <td><%=pro&.city_l&.title%></td>
                            <td><%=pro&.locality&.title%></td>
                           <td><%=pro.assets_type%></td>
                           <td><%=pro.location_map_content%></td>
                           <td><%=pro.site_Plan_content%></td>
                            <td><p style="width: 544px;"><%=pro.project_overview%></p></td>
                            <td><%=pro&.seo&.title%></td>
                            <td><%=pro&.seo&.description%></td>
                             <td><%=pro&.seo&.keyword%></td>
                           <td><%=pro&.highlight&.title%></td>
                           <td><%=pro.launch_date%></td>
                           <td><% if pro.status%>
                           <button class = "status label label-primary"rel = "<%= pro.id%>">Active</button>
                           <%else%>
                           <button class = "status label label-danger" rel = "<%= pro.id%>">Deactive</button>
                           <%end%>
                           </td>
                         
                           <td>
                              <a href="<%=admin_projects_edit_path(id:pro.id)%>"class="btn btn-success btn-md"><i class="fa fa-pencil" aria-hidden="true">Edit</i></a>&nbsp;&nbsp;
                              
                              <a href="<%=admin_projects_index_path(id:pro.id)%>"class="btn btn-success btn-md">Show</a>&nbsp;&nbsp;


                              <a href="<%=admin_projects_flatstype_path(project_id:pro.id)%>"class="btn btn-success btn-md">Flats Price</a>&nbsp;&nbsp;

                               <a href="<%=admin_projects_locationaminitiestypes_path(project_id:pro.id)%>"class="btn btn-success btn-md">Location Amenities</a>&nbsp;&nbsp;



                              <a href="<%=admin_gallerys_index_path(project_id:pro.id)%>"class="btn btn-success btn-md">Project Gallery</a>&nbsp;&nbsp;

                              <a class="btn btn-danger btn-md remove" rel="<%=pro.id%>"><i class="fa fa-trash"></i></a>  
                           </td>
                        </tr>
                     </tbody>
                     <%end%>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>


<script type="text/javascript">
   $(".remove").on("click",function(){
     id = $(this).attr("rel")
     console.log(id)
     swal({
         title: "Are you sure?",
         text: "You will not be able to recover this Project",
         type: "warning",
         showCancelButton: true,
         confirmButtonClass: "btn-danger",
         confirmButtonText: "Yes, delete it!",
         cancelButtonText: "No, cancel plz!",
         closeOnConfirm: false,
         closeOnCancel: false
     },
     function(remove) {
         if (remove) {
           window.location = "/admin/projects/delete/"+id
           swal("Deleted!", "Your Category has been deleted.", "success");
         } else {
           swal("Cancelled", "Your Category is safe", "error");
         }
     });
   })
   $(".status").on("click",function(){
     id = $(this).attr("rel")
     console.log(id)
     swal({
         title: "Are you sure?",
         text: "You will not be able to status changes this Project",
         type: "warning",
         showCancelButton: true,
         confirmButtonClass: "btn-danger",
         confirmButtonText: "Yes, delete it!",
         cancelButtonText: "No, cancel plz!",
         closeOnConfirm: false,
         closeOnCancel: false
     },
     function(remove) {
         if (remove) {
           window.location = "/admin/update/status/"+id
           swal("Deleted!", "Your Category has been deleted.", "success");
         } else {
           swal("Cancelled", "Your Category is safe", "error");
         }
     });
   })
 
</script>